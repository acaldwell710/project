<h1>
  <%= @wiki.title %> <br>
  <small>
    submitted <%= time_ago_in_words(@wiki.created_at) %> ago by <%= @wiki.user.name %>
  </small>
</h1>

<div class="row">
  <div class="col-md-8">
    <p><%= @wiki.body %></p>
  </div>
  <% if user_is_authorized_for_wiki? %>
  <div class="col-md-4">
    <%= link_to "Edit", edit_wiki_path(@wiki) if policy(@wiki).update? %>
    <%= link_to "Delete", wiki_path(@wiki), method: :delete if policy(@wiki).destroy? %>
  </div>
  <% end %>
</div>
